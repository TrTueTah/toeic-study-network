@model ToeicStudyNetwork.ViewModels.Authentication.SignUpViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "_Layout";
}

@section customHead {
    <link rel="stylesheet" href="~/css/authentication.css" asp-append-version="true" />
}

<section class="h-100 gradient-form py-5">
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10 col-lg-10">
                <div class="card fade-in shadow-lg rounded-5 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center mb-4">
                                    <h3 class="mt-3">Tạo Tài Khoản</h3>
                                    <p class="text-muted mb-4">Vui lòng điền thông tin bên dưới để đăng ký</p>
                                </div>

                                <form asp-action="SignUp" asp-controller="Authentication" method="post">
                                    <div class="form-outline mb-4">
                                        <input type="text" id="username" class="form-control form-control-lg"
                                            placeholder="Tên người dùng" required asp-for="Username" />
                                        <label class="form-label" for="username">Tên người dùng</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="email" class="form-control form-control-lg"
                                            placeholder="Email" required asp-for="Email" />
                                        <label class="form-label" for="email">Email</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="password" class="form-control form-control-lg"
                                            placeholder="Mật khẩu" required asp-for="Password" />
                                        <label class="form-label" for="password">Mật khẩu</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="confirmPassword" class="form-control form-control-lg"
                                            placeholder="Xác nhận mật khẩu" required asp-for="ConfirmPassword" />
                                        <label class="form-label" for="confirmPassword">Xác nhận mật khẩu</label>
                                    </div>

                                    <div class="text-center pt-1 mb-4">
                                        <button class="btn btn-block fa-lg mb-3 custom-btn btn-lg btn-primary"
                                            type="submit">
                                            Đăng Ký
                                        </button>
                                        <a class="text-muted" href="#!">Quên mật khẩu?</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Đã có tài khoản?</p>
                                        <a asp-action="SignIn" asp-controller="Authentication"
                                            class="btn btn-outline-secondary btn-lg">Đăng nhập ngay</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div
                            class="col-lg-6 shadow-lg d-none d-lg-flex align-items-center gradient-custom-2 justify-content-center rounded-right-custom">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4 text-center">
                                <img src="~/assets/img/logo-color.png" style="width: 150px;" alt="logo">
                                <h4 class="my-4">Chào mừng bạn đến với StuX</h4>
                                <p class="small mb-0">Tham gia cùng chúng tôi để luyện thi TOEIC hiệu quả và kết nối với
                                    cộng đồng học viên năng động!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
