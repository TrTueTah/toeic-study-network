@model ToeicStudyNetwork.Models.TakeTestModel
@{
  ViewBag.Title = @Model.Title;
  Layout = "_Layout";
}

@section customHead {
  <link rel="stylesheet" href="~/css/test_start.css" asp-append-version="true" />
}

<section class="start">
  <!-- Header -->
  <div class="container-fluid bg-light p-3 d-flex justify-content-center align-items-center">
    <h4 class="m-3">New Economy TOEIC Test 10</h4>
    <button class="btn btn-outline-danger">Thoát</button>
  </div>

  <!-- Main Content -->
  <div class="container-fluid mt-3 p-4">
    <div class="row">
      <!-- Left Section -->
      <div class="col-lg-9 card">
        <!-- Tabs -->
        <ul class="nav nav-tabs mb-4" id="testTabs">
          @if (Model.PartModels != null && Model.PartModels.Any())
          {
            @foreach (var part in Model.PartModels)
            {
              <li class="nav-item">
                <a class="nav-link" id="part@(part.PartNumber)-tab" data-bs-toggle="tab" data-bs-target="@(part.Id)"
                  type="button" asp-controller="Test">Part @(part.PartNumber)</a>
              </li>
            }
          }
          else
          {
            <li class="nav-item">
              <span class="nav-link disabled">No parts available</span>
            </li>
          }
        </ul>


        <!-- Image and Question -->
        <div class="row">
          <!-- Questions Section -->
          <div class="col-md-8 question-list" id="question-container">
            <!-- Questions will be loaded here dynamically -->
          </div>
        </div>
      </div>
    </div>

    <!-- Right Sidebar -->
    <div class="col-lg-3">
      <!-- Timer -->
      <div class="mb-3 text-center">
        <h6>Thời gian làm bài:</h6>
        <h2 class="text-danger">01:35</h2>
        <button class="btn btn-primary w-100">NỘP BÀI</button>
      </div>

      <!-- Notes -->
      <div class="mb-3">
        <small class="text-muted">
          Khôi phục/lưu bài làm<br>
          Chú ý: bạn có thể click vào số thứ tự câu hỏi trong bài để đánh dấu review
        </small>
      </div>

      <!-- Question Navigation -->
      <div class="mb-3">
        <h6>Part 1</h6>
        <div class="d-flex flex-wrap">
          <button class="btn btn-outline-secondary btn-sm m-1">1</button>
          <button class="btn btn-outline-secondary btn-sm m-1">2</button>
          <button class="btn btn-outline-secondary btn-sm m-1">3</button>
          <button class="btn btn-outline-secondary btn-sm m-1">4</button>
          <button class="btn btn-outline-secondary btn-sm m-1">5</button>
          <button class="btn btn-outline-secondary btn-sm m-1">6</button>
        </div>

        <h6>Part 2</h6>
        <div class="d-flex flex-wrap">
          <button class="btn btn-outline-secondary btn-sm m-1">7</button>
          <button class="btn btn-outline-secondary btn-sm m-1">8</button>
          <button class="btn btn-outline-secondary btn-sm m-1">9</button>
          <button class="btn btn-outline-secondary btn-sm m-1">10</button>
          <button class="btn btn-outline-secondary btn-sm m-1">11</button>
          <button class="btn btn-outline-secondary btn-sm m-1">12</button>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>

<script src="~/js/test_start.js" asp-append-version="true"></script>