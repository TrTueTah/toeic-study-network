
@{
    ViewBag.Title = "Forum";
    Layout = "_LayoutForum";
}

@section customHead {
    <link rel="stylesheet" href="~/css/forum_index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="container">
    <div class="row align-items-center mb-2">
        <div class="col-auto">
            <button class="btn btn-icon">
                <i class="bi bi-chevron-left"></i>
            </button>
        </div>

        <div class="col text-center d-flex justify-content-center align-items-center">
            <span class="py-2">For you</span>
            <button class="btn btn-icon mx-2">
                <i class="bi bi-chevron-down"></i>
            </button>
        </div>

        <div class="col-auto">
            <button class="btn btn-icon">
                <i class="bi bi-three-dots"></i>
            </button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <div class="avatar">
                <img src="https://via.placeholder.com/40x40" alt="Avatar" class="rounded-avatar">
            </div>
            <div role="button" class="post-text" tabindex="0">
                <span>What's new?</span>
            </div>
            <button class="post-button py-1 px-3">
                <span class="text-center">Post</span>
            </button>
        </div>
        @await Html.PartialAsync("_MediaPost")

    </div>
</div>


