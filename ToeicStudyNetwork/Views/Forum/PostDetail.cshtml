@model ToeicStudyNetwork.ViewModels.Forum.PostViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "_LayoutForum";
}

@section customHead {
    <link rel="stylesheet" href="~/css/forum_index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="container">
    <div class="row align-items-center mb-2">
        <div class="col-auto">
            <button class="btn btn-icon" id="exit-button">
                <i class="bi bi-chevron-left"></i>
            </button>
        </div>

        <div class="col text-center d-flex justify-content-center align-items-center">
            <span class="py-2" style="font-weight: 500" id="title">StuX Forum</span>
        </div>

        <div class="col-auto opacity-0">
            <button class="btn btn-icon">
                <i class="bi bi-three-dots"></i>
            </button>
        </div>
    </div>
    <div class="card">
        @await Html.PartialAsync("_MediaPost", Model)
        <div class="media-comments">
            @if (Model.Comments.Count > 0)
            {
                foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                {
                    <div class="media-sub-container" id="@comment.Id">
                        <div class="avatar">
                            <img src="@comment.UserImageUrl" alt="Avatar" style="width: 40px; height: 40px; border-radius: 100%;" />
                        </div>
                        <div class="media-main">
                            <div class="media-header d-flex justify-content-between align-items-center">
                                <div class="media-info">
                                    <div class="username">@comment.Username</div>
                                    <div class="timestamp">@comment.CreatedAt.ToString("dd/MM/yyyy")</div>
                                </div>
                                <div class="dropdown">
                                    <button class="options-button" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <span>Saved</span>
                                                <i class="bi bi-bookmark"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <span>Copy link</span>
                                                <i class="bi bi-link-45deg"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="media-content" style="cursor:pointer;" id="mediaMain-@comment.Id">
                                <div class="media-caption">
                                    <span>@comment.Content</span>
                                </div>
                                <div class="media-image-container">
                                    @if (comment.MediaUrls.Count > 0)
                                    {
                                    foreach (var mediaUrl in comment.MediaUrls)
                                    {
                                    <div class="media-image">
                                        <img src="@mediaUrl" alt="Media Image" style="width: 100%; height: 100%" />
                                    </div>
                                    }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<input type="hidden" id="postId" value="@Model.Id" />

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="Preview" class="img-fluid" style="max-height: 90vh;" />
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="commentModal-@Model.Id" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center position-relative w-100">
                <div id="closeModalButton" type="button" class="btn btn-link opacity-0" style="cursor: default" data-bs-dismiss="commentModal"><span>Cancel</span></div>
                <h6 class="modal-title position-absolute w-100 text-center" id="postModalLabel" style="font-weight: 600;">Reply</h6>
            </div>

            <form id="commentForm">
                <div class="modal-body">
                    <div class="media-main" id="mediaMain-@Model.Id">
                        <div class="media-header d-flex justify-content-between align-items-center">
                            <div class="media-info">
                                <div class="avatar">
                                    <img src="@Model.UserImageUrl" alt="Avatar" style="width: 40px; height: 40px; border-radius: 100%;" />
                                </div>
                                <div class="username">@Model.UserName</div>
                                <div class="timestamp">@Model.CreatedAt</div>
                            </div>
                        </div>
                        <div class="media-content">
                            <div class="media-caption">
                                <span>@Model.Content</span>
                            </div>
                            <div class="media-image-container">
                                @if (Model.MediaUrls.Count > 0)
                                {
                                foreach (var mediaUrl in Model.MediaUrls)
                                {
                                <div class="media-image">
                                    <img src="@mediaUrl" alt="Media Image" style="width: 100%; height: 100%"/>
                                </div>
                                }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="post-grid">
                        <div class="avatar-section">
                            <img src="@ViewBag.UserImageUrl" class="avatar-img rounded-circle" alt="Avatar">
                        </div>
                        <div class="user-info">
                            <span class="user-name">@ViewBag.UserName</span>
                        </div>

                        <div class="post-input">
                            <textarea class="form-control" placeholder="Reply to @Model.UserName" id="commentContent"></textarea>
                        </div>

                        <div id="image-holder" class="image-holder">

                        </div>

                        <div class="action-bar d-flex align-items-center">
                            <div class="action-item">
                                <button type="button" class="btn-action" id="upload-image-button">
                                    <i class="bi bi-images"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="post-button py-1 px-3">
                        <span class="text-center">Bình luận</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/forum_post_detail.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
    <script>
        document.getElementById("exit-button").addEventListener("click", function () {
            const currentUrl = window.location.href;
            window.location.href = currentUrl.split("/post/@Model.Id")[0];
        })
    </script>

    <script>
    document.getElementById("mediaMain-@Model.Id").addEventListener("click", async function() {
        var url = `@Url.Action("PostDetail", "Forum", new {postId = @Model.Id})`

        window.location.href = url;
    })

    document.querySelectorAll("#comment-button").forEach(button => {
        button.addEventListener("click", function () {
            const postId = this.getAttribute("data-post-id");
            const url = `@Url.Action("PostDetail", "Forum", new { postId = "__postId__" })`.replace("__postId__", postId);
            const currentUrl = window.location.pathname;

            if (url === currentUrl) {
                const commentModal = new bootstrap.Modal(document.getElementById("commentModal-@Model.Id"));
                commentModal.show();
            } else {
                window.location.href = url;
            }
        });
    });

</script>
}



